<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Inventori.Data" namespace="Inventori.Data">
	<class name="TPayment" table="T_PAYMENT">

		<id name="PaymentId" column="PAYMENT_ID" type="String">
			<generator class="assigned"/>
		</id>
		<property column="FINANCE_ID" type="String" name="FinanceId" length="50" />
		<property column="PAYMENT_AMMOUNT" type="Decimal" name="PaymentAmmount" />
		<property column="PAYMENT_DATE" type="DateTime" name="PaymentDate" />
		<property column="TRANSACTION_ID" type="String" name="TransactionId" length="50" />
		<property column="PAYMENT_DESC" type="String" name="PaymentDesc" length="100" />
		<property column="MODIFIED_BY" type="String" name="ModifiedBy" length="50" />
		<property column="MODIFIED_DATE" type="DateTime" name="ModifiedDate" />
		
	</class>
</hibernate-mapping>
